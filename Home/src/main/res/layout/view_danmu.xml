<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource,ResourceName">

    <ImageView

        app:layout_constraintWidth_percent="0.1"
        android:layout_marginLeft="@dimen/dp_10"
        android:id="@+id/iv_home_detail_view_danmu_font"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_font"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <EditText
        android:layout_margin="@dimen/dp_3"
        android:padding="@dimen/dp_6"
        android:background="@drawable/home_detail_et_bg"
        android:hint="快来发弹幕吧~"
        app:layout_constraintWidth_percent="0.7"
        android:id="@+id/et_home_detail_view_danmu_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/iv_home_detail_view_danmu_font"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <ImageView
        android:id="@+id/iv_home_detail_view_danmu_send"
        app:layout_constraintWidth_percent="0.1"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_send2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_home_detail_view_danmu_content"
        app:layout_constraintTop_toTopOf="parent"></ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>